@model IEnumerable<ClienteUI.Models.ItemCardapio>
@{
    ViewData["Title"] = "Itens do cardápio";
}
<section class="u-clearfix u-grey-10 u-section-2" id="sec-d588">
    <div class="u-clearfix u-sheet u-sheet-1">
        <h2 class="u-text u-text-1">Cardápio</h2>
        <div class="u-expanded-width u-list u-repeater u-list-1">
            @{
                int i = 0;
                foreach (var item in Model)
                {
                    if (i == 3)
                        i = 0;

                    i++;
                    <div class="u-container-style u-list-item u-repeater-item u-video-cover u-white u-list-item-@(i)">
                        <div class="u-container-layout u-similar-container u-container-layout-@(i)">
                            <h4 class="u-text u-text-2">@item.NomeItem</h4>
                            <p />
                            <h6 class="u-text u-text-2">@item.Observacao</h6>
                            <p />
                            <h6 class="u-text u-text-palette-3-base u-text-7">R$@item.Valor</h6>
                            <p />
                            Quantidade: @Html.EditorFor(x => @item.Quantidade, new { htmlAttributes = new { @type = "number", @min = "0", @max = "20", @value = "0" } })

                            @Html.ActionLink("Add ao carrinho", "Carrinho", "ItemCardapio", new { idCardapio = item.CardapioId, idItem = item.Id, nome = item.NomeItem, valor = item.Valor, quantidade = item.Quantidade }, new { @class = "u-btn u-btn-rectangle u-button-style u-palette-3-base u-btn-3" })

                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>